<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbg"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_fragmentScan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/Theme.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/fragment_deviceConfig_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/tool_bar_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.6"
                android:text="@string/fragment_Device_configuration_Toolbar_header_name"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/save_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/Save_String"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="782dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="20dp">
            <EditText
                android:id="@+id/gsm_interval_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/lable_device_configuration"
                android:hint="Enter GSM Interval"
                android:paddingLeft="10dp"
                android:maxLength="5"
                android:inputType="number"
                android:textColor="@color/colorBlack" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Interval between waypoint report in seconds. Setting this value to 0 will cellular waypoint.."
                android:textColor="#B3AEAE" />
            <EditText
                android:id="@+id/gsm_timeout_interval_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/lable_device_configuration"
                android:hint="Enter GSM Timeout"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:maxLength="5"
                android:textColor="@color/colorBlack" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="GSM timeout in seconds"
                android:textColor="#B3AEAE" />
            <EditText
                android:id="@+id/gps_interval_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/lable_device_configuration"
                android:hint="Enter GPS Interval"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Time in seconds between interval waypoints.Setting this value to 0 will disable storing the waypoint interval.."
                android:textColor="#B3AEAE" />

            <EditText
                android:id="@+id/gps_timeout_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/lable_device_configuration"
                android:hint="Enter GPS Timeout"
                android:paddingLeft="10dp"
                android:maxLength="5"
                android:inputType="number"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="GPS timeout in seconds"
                android:textColor="#B3AEAE" />

            <EditText
                android:id="@+id/satellite_interval_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/lable_device_configuration"
                android:hint="Enter Satellite Interval"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"

                android:text="Satellite Timeout"
                android:textColor="#B3AEAE" />

            <EditText
                android:id="@+id/satellite_timeout_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/lable_device_configuration"
                android:hint="Enter Satellite Timeout"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Satellite Timeout"
                android:textColor="#B3AEAE" />

            <EditText
                android:id="@+id/cheapest_multiplier_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/lable_device_configuration"
                android:hint="Enter Cheapest multiplier"
                android:maxLength="5"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Specifies how many retries over cheaper medium requried before more expensive method is used..."
                android:textColor="#B3AEAE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Cheapest mode"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/cheapest_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/cheapest_radio_group_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="on"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/cheapest_radio_group_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="off"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/cheapest_radio_group_unchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:checked="true"
                    android:text="unchange"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Ultra low power mode"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/ultra_power_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/ultra_power_mode_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="on"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/ultra_power_mode_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="off"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/ultra_power_mode_unchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:buttonTint="@color/colorWhite"
                    android:text="unchange"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="USB download mode"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/usb_download_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/usb_download_mode_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="on"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/usb_download_mode_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="off"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/usb_download_mode_unchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:buttonTint="@color/colorWhite"
                    android:text="unchange"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Iridium always on"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/iridium_always"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">
                <RadioButton
                    android:id="@+id/iridium_always_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="on"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/iridium_always_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="off"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/iridium_always_unchnage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="unchange"
                    android:checked="true"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Iridium events on"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/iridium_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">
                <RadioButton
                    android:id="@+id/iridium_event_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="on"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/iridium_event_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="off"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/iridium_event_unchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="unchange"
                    android:checked="true"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Instant tamper"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/instant_temper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">
                <RadioButton
                    android:id="@+id/instant_temper_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="on"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/instant_temper_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="off"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/instant_temper_unchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="unchange"
                    android:checked="true"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Waypoint on movement"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/waypoint_movement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">
                <RadioButton
                    android:id="@+id/waypoint_movement_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="on"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/waypoint_movement_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:text="off"
                    android:textColor="@color/colorWhite" />
                <RadioButton
                    android:id="@+id/waypoint_movement_unchnage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:buttonTint="@color/colorWhite"
                    android:text="unchange"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>