<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--This Tag is used to Remove the white screen when the MainActivity opens-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--This Tag is used to Remove the white screen when the MainActivity opens-->
    </style>

    <!-- SplashScreen Style-->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--Back Dialog Theme-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorAppTheme</item>
        <item name="colorAccent">@color/colorBlueTheme</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <!--Fragment Setting RadioButton Style Theme.-->
    <style name="setting_switch" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#148E13</item>
    </style>

    <!-- beacon setting switch style-->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#148E13</item>
    </style>
    <!--This is use to make green switch when it is on-->

    <!--LoginActivity Edit Text Theme-->
    <style name="MyEditTextWhite" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhiteLight</item>
        <item name="colorControlNormal">@color/colorWhiteLight</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:colorAccent"
            tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
    <!--LoginActivity CheckBox  Theme-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <!--Dialog Fragment Style-->
    <style name="AppTheme.Dialog.CustomShort" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <!--Cancels dialog when a user touches outside of dialog to close-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>
