<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/raw_power_strip_socket_relativelayout_main"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_130sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/rounded_border_black"
    android:gravity="center">

    <ImageView
        android:id="@+id/raw_device_list_item_imageview_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:tint="@color/colorWhite"
        android:src="@drawable/ic_default_socket_icon" />

    <TextView
        android:id="@+id/raw_power_strip_textview_socket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/raw_device_list_item_imageview_device"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:text="Socket 1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/raw_power_strip_switch_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/raw_power_strip_textview_socket_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:padding="@dimen/_10sdp"
        android:thumb="@drawable/switch_thumb"
        android:visibility="visible"
        app:trackTint="@color/colorWhite" />
</RelativeLayout>
