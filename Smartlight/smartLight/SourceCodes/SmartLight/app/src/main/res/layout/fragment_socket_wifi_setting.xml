<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSemiTransparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewWifiConfigStatus"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/_80sdp"
        android:src="@drawable/redcross" />

    <TextView
        android:id="@+id/textViewWifiConfigStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_14sdp"
        android:gravity="center"
        android:text="Wi-Fi not configured"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp" />

    <Button
        android:id="@+id/buttonConfigWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shadow_bg"
        android:backgroundTint="@color/colorBackground"
        android:gravity="center"
        android:padding="@dimen/_16sdp"
        android:text="Configure Wi-Fi"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/buttonRemoveWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shadow_bg"
        android:backgroundTint="@color/colorBackground"
        android:gravity="center"
        android:padding="@dimen/_16sdp"
        android:text="Remove Wi-Fi config"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />
</LinearLayout>