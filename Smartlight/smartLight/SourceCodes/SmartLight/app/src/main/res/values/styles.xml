<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:fontFamily">@font/century_gothic</item>

    </style>

    <style name="AppThemeSplash.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorAppTheam</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>
    <style name="Widget.AppCompat.ActionButton." parent="TextAppearance.AppCompat"><item name="android:textAllCaps">false</item></style>
    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="MyEditTextWhite" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorWhiteLight</item>
        <item name="colorControlNormal">@color/colorWhiteLight</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/radio_button_selected_color</item>
        <item name="android:progressTint">@color/radio_button_selected_color</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="MyEditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAppTheam</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="colorControlNormal">@color/colorGrayText</item>
        <item name="colorControlActivated">@color/colorAppTheam</item>
        <item name="colorControlHighlight">@color/colorAppTheam</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="MyEditTextBlackDialog" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAppTheam</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="colorControlNormal">@color/colorGrayText</item>
        <item name="colorControlActivated">@color/colorAppTheam</item>
        <item name="colorControlHighlight">@color/colorAppTheam</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget"/>


    <!--Wifi Pop up dialog Fragment Theme-->
    <!--Dialog Fragment Style-->
    <style name="AppTheme.Dialog.CustomShort" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <!--Cancels dialog when a user touches outside of dialog to close-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="AppTheme.Dialog.Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <!--Cancels dialog when a user touches outside of dialog to close-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_menu_bg</item>
    </style>
    <!--PowerSocket Date_Time Picker Theme-->
    <style name="Date_Time_Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#6539ba</item>
        <item name="colorPrimaryDark">#6539ba</item>
        <item name="colorAccent">#DD0F56</item>
    </style>

</resources>
