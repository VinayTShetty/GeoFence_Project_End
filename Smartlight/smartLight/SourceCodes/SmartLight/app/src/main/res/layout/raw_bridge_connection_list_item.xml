<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/raw_bridge_connection_list_item_relativelayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_black"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/raw_bridge_connection_list_item_imageview_device"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_default_pic"
            android:tint="@color/colorWhite" />

        <RelativeLayout
            android:id="@+id/raw_add_device_relativelayout_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/raw_bridge_connection_list_item_ll_connect"
            android:layout_toRightOf="@+id/raw_bridge_connection_list_item_imageview_device"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/raw_bridge_connection_list_item_textview_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/raw_bridge_connection_list_item_textview_deviceid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raw_bridge_connection_list_item_textview_device_name"
                android:text=""
                android:textColor="@color/colorWhiteLight"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/raw_bridge_connection_list_item_ll_connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/raw_bridge_connection_list_item_textview_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_2sdp"
                android:text="@string/frg_setting_brg_conn_btn_connect"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/raw_bridge_connection_list_item_textview_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@string/frg_setting_brg_conn_btn_connect"
                android:textColor="@color/colorWhiteLight"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/raw_bridge_connection_list_item_relativelayout_main"
        android:background="@color/colorDivider"
        android:visibility="gone" />
</RelativeLayout>
