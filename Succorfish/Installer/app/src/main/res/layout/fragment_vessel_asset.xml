<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_vessel_asset_relativelayout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_vessel_asset_relativelayout_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/fragment_vessel_asset_autocompletetextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:completionThreshold="1"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_action_action_search"
            android:hint="@string/str_frg_two_enter_vessel_name"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhiteLight"
            android:textSize="@dimen/_12sdp" />

        <View
            android:id="@+id/fragment_vessel_asset_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fragment_vessel_asset_autocompletetextview"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/colorDivider" />

        <EditText
            android:id="@+id/fragment_vessel_asset_editext_regno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_vessel_asset_divider"
            android:hint="@string/str_frg_two_registration_no"
            android:imeOptions="actionDone"
            android:inputType="text|textNoSuggestions"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhiteLight"
            android:textSize="@dimen/_12sdp"
            android:theme="@style/MyEditTextWhite" />
    </RelativeLayout>

</RelativeLayout>