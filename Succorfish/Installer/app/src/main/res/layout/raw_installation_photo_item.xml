<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/raw_installation_photo_item_textview_image_type"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="@dimen/_5sdp"
        android:text="Image Type"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_10sdp" />

    <android.support.v7.widget.CardView
        android:id="@+id/raw_installation_photo_item_cardview_image"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_below="@+id/raw_installation_photo_item_textview_image_type"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/ic_login_bg_shadow"
        app:cardBackgroundColor="@color/colorAppTheme"
        app:cardCornerRadius="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/raw_installation_photo_item_imageview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_photos_default" />

            <ImageView
                android:id="@+id/raw_installation_photo_item_imageview_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_photo_delete" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
