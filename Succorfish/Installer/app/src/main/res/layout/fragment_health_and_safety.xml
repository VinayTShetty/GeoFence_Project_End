<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/popup_iv_view_iv_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/ic_dynamic_risk_assessment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.libRG.CustomTextView
                android:id="@+id/fragment_health_safety_tv_go"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentRight="true"
                android:gravity="center|center_horizontal"
                android:text="GO"
                android:textColor="#fff"
                android:textSize="@dimen/_16sdp"
                android:visibility="visible"
                app:lib_setRoundedBGColor="@color/colorSemiTransparent"
                app:lib_setRoundedView="true"
                app:lib_setShape="oval"
                app:lib_setStrokeWidth="2dp" />

            <TextView
                android:id="@+id/fragment_health_safety_tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="serif"
                android:gravity="left"
                android:text="OR"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:visibility="visible" />

            <com.libRG.CustomTextView
                android:id="@+id/fragment_health_safety_tv_review"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center|center_horizontal"
                android:text="REVIEW"
                android:textColor="#fff"
                android:textSize="@dimen/_16sdp"
                android:visibility="visible"
                app:lib_setRoundedBGColor="@color/colorSemiTransparent"
                app:lib_setRoundedView="true"
                app:lib_setShape="oval"
                app:lib_setStrokeWidth="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="serif"
                android:gravity="left"
                android:padding="@dimen/_5sdp"
                android:text="Standard Risk Assessment"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
