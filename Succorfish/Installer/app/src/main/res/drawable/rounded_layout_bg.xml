<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhiteLight" />
            <corners android:radius="@dimen/_1sdp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_2sdp"
        android:left="@dimen/_2sdp"
        android:right="@dimen/_2sdp"
        android:top="@dimen/_2sdp">
        <shape
            android:padding="15dp"
            android:shape="rectangle">
            <solid android:color="@color/colorAppTheme" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorWhiteLight" />
            <corners
                android:bottomLeftRadius="@dimen/_20sdp"
                android:bottomRightRadius="@dimen/_20sdp"
                android:topLeftRadius="@dimen/_20sdp"
                android:topRightRadius="@dimen/_20sdp" />
        </shape>
    </item>
</layer-list>