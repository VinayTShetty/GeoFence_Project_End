<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/user_input_dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_3sdp"
        android:text="Device Name"
        android:textSize="@dimen/_16sdp" />

    <EditText
        android:id="@+id/user_input_dialog_et_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Device name(eg.Succorfish D&amp;T1)"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:visibility="gone"
        android:textSize="@dimen/_14sdp"
        android:theme="@style/MyEditTextBlack" />

    <EditText
        android:id="@+id/user_input_dialog_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Device name(eg.Succorfish D&amp;T1)"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textSize="@dimen/_14sdp"
        android:theme="@style/MyEditTextBlack" />
</LinearLayout>
