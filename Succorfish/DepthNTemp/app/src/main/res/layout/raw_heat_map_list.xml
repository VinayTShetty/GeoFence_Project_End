<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/raw_heat_map_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <com.libRG.CustomTextView
            android:id="@+id/raw_heat_map_list_tv_color"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            app:lib_setRoundedBGColor="@color/temp_high"
            app:lib_setRoundedView="true"
            app:lib_setShape="oval"
            app:lib_setStrokeWidth="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/raw_heat_map_list_tv_range_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High Temperature"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/raw_heat_map_list_tv_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp : -40°C to 85°C"
                android:textColor="@color/colorWhiteLight"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:background="@color/colorWhiteLight" />
</LinearLayout>
