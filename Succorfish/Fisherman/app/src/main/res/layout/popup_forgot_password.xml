<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp">


    <RelativeLayout
        android:id="@+id/activity_login_cardview_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_login_bg_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/popup_forgot_password_imageview_close"
                    android:background="@color/colorAppTheme"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="@string/str_login_forgot_password"
                    android:textColor="@color/colorGrayText"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/popup_forgot_password_imageview_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:elevation="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Contact us on"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/popup_forgot_pw_textview_call_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:elevation="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="+44 191 4476883"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/popup_forgot_pw_button_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/ic_forgot_pw_bg"
                android:minHeight="@dimen/_30sdp"
                android:text="Call us"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/popup_forgot_password_tv_or"
                    android:background="@color/colorWhite" />

                <TextView
                    android:id="@+id/popup_forgot_password_tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="OR"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/popup_forgot_password_tv_or"
                    android:background="@color/colorWhite" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:elevation="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Write mail us on"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/popup_forgot_pw_textview_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:elevation="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="tom@succorfish.com"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/popup_forgot_pw_button_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/ic_forgot_pw_bg"
                android:minHeight="@dimen/_30sdp"
                android:text="Mail us"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
