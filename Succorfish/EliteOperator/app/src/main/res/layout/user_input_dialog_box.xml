<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/user_input_dialog_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_3sdp"
        android:text="@string/frg_surface_txt_add_canned_msg"
        android:textSize="@dimen/_16sdp" />

    <EditText
        android:id="@+id/user_input_dialog_edittext_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Please enter message"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:theme="@style/MyEditTextBlack"
        android:textSize="@dimen/_14sdp" />
</LinearLayout>
