<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@color/colorAppTheam">

    <TextView
        android:id="@+id/raw_msg_history_list_item_textview_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/raw_msg_history_list_item_relativelayout"
        android:gravity="left"
        android:padding="@dimen/_5sdp"
        android:text="Message Statistic"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp" />

    <LinearLayout
        android:id="@+id/raw_msg_history_list_item_relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/raw_msg_history_list_item_textview_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/textview_rounded_boarder_red"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Failed-0"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/raw_msg_history_list_item_textview_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/textview_rounded_boarder_green"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Sent-0"
            android:textColor="@color/colorGreenHistory"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</RelativeLayout>
